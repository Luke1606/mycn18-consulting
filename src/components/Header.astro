---
import { Image } from 'astro:assets';
import { NAV_LINKS, SOCIAL_LINKS } from '../consts';
import HeaderLink from './HeaderLink.astro';
import logoPrincipal from '../assets/logo-principal.jpg';

const navLinks = [
	{ href: '/', label: 'Inicio' },
	{ href: NAV_LINKS.SERVICES, label: 'Servicios' },
	{ href: NAV_LINKS.USE_CASES, label: 'Casos de uso' },
	{ href: NAV_LINKS.CONTACT, label: 'Contacto' },
];
---

<header>
	<nav>
		<div class="site-title">
			<a href="/">
				<!-- TODO editar el estilo del icono para q se vea mas, apenas se distingue-->
				<Image src={logoPrincipal} width={40} height={40} alt="MyCn18 Logo" />
			</a>
			<!-- TODO aumentar el tamaño del tagline, se ve mas pequeño que los enlaces de navegacion -->
			<span class="tagline">Servicios de Arquitectura y Consultoría</span>
		</div>
		<div class="internal-links">
			{navLinks.map((link) => (
				<HeaderLink href={link.href}>{link.label}</HeaderLink>
			))}
		</div>
		<div class="social-links">
			{SOCIAL_LINKS.map((link) => (
				<a href={link.href} target="_blank" aria-label={`Follow on ${link.name}`}>
					<span class="sr-only">Follow on {link.name}</span>
					<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
						<path fill="currentColor" d={link.icon}></path>
					</svg>
				</a>
			))}
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--cosmic-void); /* Fondo oscuro */
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
		color: var(--guide-light); /* Texto claro */
	}
	.site-title {
		display: flex;
		align-items: center;
		gap: 0.5em;
	}
	.site-title a {
		display: flex;
		align-items: center;
		text-decoration: none;
		color: var(--guide-light);
	}
	.site-title img {
		border-radius: 50%; /* Para logos circulares */
	}
	.tagline {
		font-size: 0.9em;
		opacity: 0.8;
		margin-left: 0.5em;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1em 0;
	}
	nav a {
		padding: 0.5em 0.75em;
		color: var(--guide-light);
		border-bottom: 2px solid transparent;
		text-decoration: none;
		transition: border-bottom-color 0.3s ease;
	}
	nav a.active {
		border-bottom-color: var(--oxygen-blue);
	}
	nav a:hover {
		border-bottom-color: var(--nitrogen-red);
	}
	.internal-links {
		display: flex;
		gap: 1em;
	}
	.social-links {
		display: flex;
		gap: 0.5em;
	}
	.social-links a {
		color: var(--guide-light);
		padding: 0.5em;
		border-bottom: none;
	}
	.social-links a:hover {
		color: var(--oxygen-blue);
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
		.site-title .tagline {
			display: none;
		}
		nav {
			flex-direction: column;
			align-items: flex-start;
			gap: 1em;
		}
		.internal-links {
			flex-direction: column;
			gap: 0.5em;
		}
	}
</style>
