---
import { SOCIAL_LINKS } from "../consts";

const today = new Date();
---

<footer>
	<div class="footer-links">
		<a href="https://mycn18-frontend.placeholder" target="_blank">Sitio oficial MyCn18</a>
		<a href="https://mycn18-docs.placeholder" target="_blank">Documentación MyCn18</a>
	</div>
	<div class="social-links">
		{SOCIAL_LINKS.map((link) => (
			<a href={link.href} target="_blank" aria-label={`Follow on ${link.name}`}>
				<span class="sr-only">Follow on {link.name}</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
					<path fill="currentColor" d={link.icon}></path>
				</svg>
			</a>
		))}
	</div>
	<p>&copy; {today.getFullYear()} Luis Alberto Hernández Roselló. Todos los derechos reservados.</p>
</footer>
<style>
	footer {
		padding: 2em 1em;
		background: var(--cosmic-void); /* Fondo oscuro */
		color: var(--gray);
		text-align: center;
		border-top: 1px solid rgba(var(--gray-light), 0.1);
	}
	.footer-links {
		display: flex;
		justify-content: center;
		gap: 2em;
		margin-bottom: 1em;
	}
	.footer-links a {
		color: var(--oxygen-blue);
		text-decoration: none;
		transition: color 0.3s ease;
	}
	.footer-links a:hover {
		color: var(--nitrogen-red);
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
		margin-bottom: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: var(--guide-light);
		transition: color 0.3s ease;
	}
	.social-links a:hover {
		color: var(--oxygen-blue);
	}
	footer p {
		font-size: 0.9em;
		color: var(--gray);
	}
</style>
